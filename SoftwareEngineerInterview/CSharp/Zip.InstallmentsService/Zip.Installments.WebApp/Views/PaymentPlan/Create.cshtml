@model Zip.Installments.WebApp.Models.PaymentPlanViewModel 

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PaymentPlan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PurchaseAmount" class="control-label"></label>
                <input asp-for="PurchaseAmount" class="form-control" />
                <span asp-validation-for="PurchaseAmount" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Installments" class="control-label"></label>
                <input asp-for="Installments" class="form-control" />
                <span asp-validation-for="Installments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseFrequency" class="control-label"></label>
                <select asp-for="PurchaseFrequency" class="form-control"
                        asp-items="@(new SelectList(ViewBag.PurchaseFrequency,"Value", "Text"))">
                </select>
                <span asp-validation-for="PurchaseFrequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
